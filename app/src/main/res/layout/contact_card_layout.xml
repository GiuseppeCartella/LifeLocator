<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_marginBottom="@dimen/card_distance"
    app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/card_distance">


        <TextView
            android:id="@+id/initials"
            android:layout_width="@dimen/contact_photo_width"
            android:layout_height="@dimen/contact_photo_height"
            android:background="@drawable/contact_circle"
            android:gravity="center"
            android:text="FM"
            android:textColor="@android:color/white"
            android:textSize="@dimen/card_view_text_size_name"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/informations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/initials"
            android:layout_toRightOf="@+id/initials"
            android:textSize="@dimen/card_view_text_size_surname"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>

